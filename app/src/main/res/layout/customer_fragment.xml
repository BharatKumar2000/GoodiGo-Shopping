<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:Card_View="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accountbackthree"
    tools:context=".ui.fragments.CustomerServiceFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/tv1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Service"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_below="@id/tv1"
        android:layout_alignParentLeft="true"
        android:id="@+id/tv2"/>

    <androidx.cardview.widget.CardView
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:id="@+id/cv1"
        Card_View:cardCornerRadius="5dp"
        Card_View:cardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="GoodiGo is focused on the health and safety of both our customers and associates. If your address lies in an area with local restrictions, then your order might get delayed. You may also experience longer hold times when you call us. For fast and easy self-help solutions, please visit the Your Orders section on the GoodiGo app. Thank you for your patience"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact us"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_below="@id/cv1"
        android:id="@+id/tv4"/>

    <androidx.cardview.widget.CardView
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:id="@+id/cv2"
        Card_View:cardCornerRadius="5dp"
        Card_View:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationdetails"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/locivg"
                android:src="@drawable/loc"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:text="B-23,Yadav Nagar,Samaypur Badli,New Delhi-110042"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calldetails"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/callivg"
                android:src="@drawable/call"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="  +91 8447878318"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maildetails"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mailivg"
                android:src="@drawable/mail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:text="alcatron.vj.xxx@gmail.com"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/cv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circletwo"
        android:scaleType="centerInside"
        android:src="@drawable/logo" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>